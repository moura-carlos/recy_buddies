<p id="notice"><%= notice %></p>

<h1 style="color: black">Recycling Packages</h1>

<% if user_signed_in? %>
  <h2>Welcome <%= current_user.email %></h2>
<% end %>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.address %></td>
        <td><%= package.content %></td>
        <td><%= package.user.email %></td>
        <td><%= link_to 'Show', package %></td>
        <% if policy(package).destroy? %>
          <!--<td><%= link_to 'Edit', edit_package_path(package) %></td>-->
          <td><%= link_to 'Delete', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if package.user_id != current_user.id %>
          <% @pick_up_package = {user_id: current_user.id, package_id: package.user_id} %>
          <td><%= link_to 'PickUp', "#" %></td> <!--new_pick_up_path(@pick_up_package)--->
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Package).create? %>
  <%= link_to 'New Package', new_package_path %>
<% end %>
