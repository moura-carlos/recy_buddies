<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="container show packages">
  <div class="row justify-content-center">
    <div class="class-4">
      <p id="notice"><%= notice %></p>
      <p>
        <strong>Address:</strong>
        <%= @package.address %>
      </p>
      <p>
        <strong>Content:</strong>
        <%= @package.content %>
      </p>
      <p>
        <strong>Who created this package?</strong>
        <%@user_email = User.find(@package.user_id).email%>
        <%= @user_email.split("@")[0] %>
      </p>
      <p>
       <%= link_to "Back", packages_path, class: "btn btn-ghost" %>
       </p>
      <p>
        <% if policy(@package).destroy? %>
          <%= link_to 'Destroy', package_path(@package), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </p>
  </div>
  </div>
</div>
